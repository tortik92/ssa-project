<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SoundLeap" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="colorPrimary">@color/white</item>

    </style>

    <style name="smallTextStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="regularTextStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="largeTextStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="headerTextStyle">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="btnLayout">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minWidth">125dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="helpBtnLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
    </style>


    <style name="popupBtnLayout">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="popupElementLayout">
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">25dp</item>
        <item name="elevation">8dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>